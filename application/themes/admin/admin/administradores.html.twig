{% extends _layout %}

{% use 'menu.html.twig' %}

{% block content %}

	<div class="container">

		<h1>
			Administradores
		</h1>
		<form action="{{base_url}}admin_administrador/save/" method="post">
			<div class="form-search">
				<input type="hidden" name="id" id="id">
				<label>
					Login
				</label>
				<input type="text" name="login" id="login" style="width:100%">
			</div>
			<div class="form-search">
				<label>
					Password
				</label>
				<input type="password" id="password" name="password" style="width:100%">
			</div>
			<div class="form-search">
				<label>
					Email
				</label>
				<input type="text" id="email" name="email" style="width:100%">
			</div>
			<br>
			<div class="form-search">
				<input type="submit" name="enviar" class="btn" id="enviar" value="Guardar">
				<input type="reset" name="cancelar" class="btn"  id="cancelar" value="Cancelar">
			</div>
		</form>

		<div style="width:100%;" id="grilla" >
		</div>

	</div>

{% endblock %}
{% block script%}
	<script type="text/javascript" src="{{base_url}}public/lib/jquery.form/jquery.form.js"></script>
	<script type="text/javascript" src="{{base_url}}public/js/admin/administradores.js"></script>
{% endblock %}